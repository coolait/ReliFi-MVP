# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/rideshare_data

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=rideshare_scraper.log

# Scraper Configuration
# Comma-separated list of scrapers to enable (leave empty for all)
ENABLED_SCRAPERS=

# Schedule Configuration
# Run scrapers on schedule (true/false)
RUN_ON_SCHEDULE=false

# Schedule time (24-hour format)
SCHEDULE_DAY=monday
SCHEDULE_TIME=02:00

# Optional: API Keys (if needed for specific data sources)
# NYC_OPEN_DATA_API_KEY=
# CHICAGO_DATA_API_KEY=
